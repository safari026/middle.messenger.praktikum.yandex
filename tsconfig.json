{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"outDir": "dist",
		"esModuleInterop": true,
		"declaration": false,
		"typeRoots": ["node_modules/@types", "typings/app.d.ts"],
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"sourceMap": true,
		"strictNullChecks": true
	}
}
